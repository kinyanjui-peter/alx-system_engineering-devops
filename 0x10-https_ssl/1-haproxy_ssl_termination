
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http_front
    bind *:80
    mode http
    option forwardfor
    option http-server-close
    redirect scheme https code 301 if !{ ssl_fc }

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.meldev.tech/fullchain.pem
    mode http
    option forwardfor
    option http-server-close
    reqadd X-Forwarded-Proto:\ https

    acl is_holberton path -i /holberton
    use_backend holberton_backend if is_holberton

    default_backend my_backend

backend my_backend
    mode http
    balance roundrobin
    server web-01 18.234.130.46:80 check
    server web-02 54.145.241.161:80 check

backend holberton_backend
    mode http
    balance roundrobin
    server web-01 18.234.130.46:80 check
    server web-02 54.145.241.161:80 check


